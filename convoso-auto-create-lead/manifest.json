{
  "manifest_version": 3,
  "name": "Convoso Auto Create Lead",
  "version": "1.0.0",
  "description": "Automatically clicks the 'Create Lead' button after dispositioning a lead in Convoso.",
  "author": "Contact Center Tools",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.convoso.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.convoso.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
